@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h4 class="text-center">Welcome to Kaust Telerik ASP.NET Core MVC demo</h4>
<hr />

<div id="dashboardInfo">
	@(await Html.PartialAsync("_DashboardInfo", Model))

	@* Alternative way to load partial views in ASP.NET Core MVC *@
	@* <partial name="_DashboardInfo" model="Model" /> *@
</div>

<div class="row">
	<div class="col-12">
		@(Html.Kendo().Button()
			.Name("refreshButton")
			.Content(@<text>
				@(Html.Kendo().Loader()
					.Name("loader")
					.Type(LoaderType.InfiniteSpinner)
					.Size(LoaderSize.Small)
					.Visible(false)
					.ThemeColor(LoaderThemeColor.Primary))
					Refresh
				</text>)
			.IconClass("k-icon k-font-icon k-i-arrow-rotate-ccw k-i-reset")
			.HtmlAttributes(new { @class = "mt-2 k-float-right", data_is_built_with_html_helper = true })
			.Events(ev => ev.Click("onRefreshDashboardInfo"))
		)
	</div>
</div>

@section scripts {
    <environment include="Development">
		<script src="~/js/home.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/js/home.min.js"></script>
	</environment>
}